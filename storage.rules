rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // ─── Helper functions ───────────────────────────────────────────────────

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdminOrContentManager() {
      return isSignedIn() &&
        (request.auth.token.role == 'admin' || request.auth.token.role == 'content_manager');
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.role == 'admin';
    }

    function isBusinessUser() {
      return isSignedIn() && request.auth.token.role == 'business_user';
    }

    // ─── icons/ ─────────────────────────────────────────────────────────────
    // Only admin and content managers can upload/delete icons
    // Anyone can read (icons displayed publicly on the map)

    match /icons/{fileName} {
      allow read: if true;
      allow write: if isAdminOrContentManager();
    }

    // ─── poi-media/ ─────────────────────────────────────────────────────────
    // Admin and content managers can upload/delete any POI media
    // Business users can upload images for their assigned POIs
    // Anyone can read (POI images displayed publicly)
    // Note: Storage rules can't read Firestore, so write access for business_user is
    // scoped to role only. The Firestore POI update rule (associatedUserIds check)
    // prevents them from persisting URLs to POIs they don't own.

    match /poi-media/{allPaths=**} {
      allow read: if true;
      allow write: if isAdminOrContentManager() || isBusinessUser();
    }

    // ─── Default deny ───────────────────────────────────────────────────────

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
